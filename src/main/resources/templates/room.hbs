<room>
	<div class="summary">-= {{summary}} =-</div>
	<div class="description">{{{description}}}</div>
	<div class="exit">출구 : [{{exitString}}]</div>
	<ul class="players">
{{#each players}}
	<li><span class="player">{{name}}</span>이(가) 서있습니다.</li>
{{/each}}
	</ul>
	<ul class="items">
{{#each items}}
	<li><span class="item {{grade}}">{{name}}</span>{{#if isLocked}}<span class="locked">(잠김)</span>{{/if}}이(가) 놓여있습니다.</li>
{{/each}}
	</ul>
</room>